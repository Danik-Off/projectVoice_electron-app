{
    "name": "projectvoice-frontend",
    "version": "0.0.1",
    "description": "Frontend для ProjectVoice - голосового приложения с WebRTC",
    "author": "Ovchinnikov Danila",
    "private": true,
    "main": "build/electron.js",
    "homepage": "./",
    "dependencies": {
        "i18next": "^23.11.5",
        "i18next-browser-languagedetector": "^7.2.0",
        "mobx": "^6.12.0",
        "mobx-react": "^9.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^13.5.0",
        "react-router-dom": "^6.26.2",
        "socket.io-client": "^4.7.5",
        "typescript": "^4.9.5",
        "web-vitals": "^3.5.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "concurrently": "^9.2.1",
        "electron": "^38.2.0",
        "electron-builder": "^26.0.12",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "sass": "^1.93.2",
        "wait-on": "^9.0.1"
    },
    "scripts": {
        "start": "node scripts/generate-version.js && react-scripts start",
        "build": "node scripts/generate-version.js && react-scripts build && node scripts/optimize-build.js && node scripts/post-build.js",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint src/**/*.{ts,tsx}",
        "generate-version": "node scripts/generate-version.js",
        "electron": "electron .",
        "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
        "electron-pack": "npm run build && electron-builder",
        "electron-pack-win": "npm run build && electron-builder --win",
        "electron-pack-mac": "npm run build && electron-builder --mac",
        "electron-pack-linux": "npm run build && electron-builder --linux",
        "electron-pack-all": "npm run build && electron-builder --win --mac --linux",
        "preelectron-pack": "npm run build",
        "preelectron-pack-win": "npm run build",
        "preelectron-pack-mac": "npm run build",
        "preelectron-pack-linux": "npm run build",
        "preelectron-pack-all": "npm run build"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "appId": "com.projectvoice.desktop",
        "productName": "ProjectVoice Desktop",
        "compression": "maximum",
        "removePackageScripts": true,
        "asar": true,
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "build/**/*",
            "!build/static/js/*.map",
            "!build/static/css/*.map",
            "!build/static/media/**/*.svg",
            "!build/static/media/**/*.png",
            "!build/static/media/**/*.jpg",
            "!build/static/media/**/*.jpeg",
            "!build/static/media/**/*.gif",
            "!build/static/media/**/*.webp",
            "!node_modules/**/*",
            "!src/**/*",
            "!public/**/*",
            "!scripts/**/*",
            "!electron/**/*",
            "!*.md",
            "!*.json",
            "!*.js",
            "!*.yml",
            "!*.yaml"
        ],
        "asarUnpack": [
            "build/static/media/**/*"
        ],
        "includeSubNodeModules": false,
        "extraResources": [
            {
                "from": "build/static",
                "to": "static"
            }
        ],
        "mac": {
            "category": "public.app-category.social-networking",
            "target": [
                {
                    "target": "dmg",
                    "arch": ["x64", "arm64"]
                },
                {
                    "target": "zip",
                    "arch": ["x64", "arm64"]
                }
            ],
            "icon": "build/logo512.png",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                },
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ],
            "icon": "build/logo512.png",
            "requestedExecutionLevel": "asInvoker",
            "compression": "maximum"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": ["x64"]
                },
                {
                    "target": "deb",
                    "arch": ["x64"]
                },
                {
                    "target": "rpm",
                    "arch": ["x64"]
                }
            ],
            "icon": "build/logo512.png",
            "category": "Network"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/favicon.ico",
            "uninstallerIcon": "build/favicon.ico",
            "installerHeaderIcon": "build/favicon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "ProjectVoice Desktop"
        },
        "dmg": {
            "title": "ProjectVoice Desktop",
            "icon": "build/logo512.png",
            "background": "build/logo512.png",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    }
}