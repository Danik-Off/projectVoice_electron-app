{
  "name": "projectvoice-electron",
  "private": true,
  "type": "module",
  "version": "0.0.12",
  "description": "ProjectVoice - Voice communication application",
  "author": "Danila Ovchinnikov (Danik Off)",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron electron/main.js",
    "dev:server": "node server.js",
    "dev:full": "concurrently \"npm run dev:vite\" \"npm run dev:server\" \"npm run dev:electron\"",
    "prebuild": "node scripts/update-version.js",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "type-check": "tsc --noEmit",
    "build:check": "(npm run type-check || echo '⚠️ Type check failed, continuing build...') && npm run build:vite",
    "build:electron": "cross-env NODE_ENV=production electron-builder",
    "build:win": "npm run build:check && cross-env NODE_ENV=production electron-builder --win",
    "build:mac": "node scripts/check-platform.js mac && npm run build:check && cross-env NODE_ENV=production electron-builder --mac",
    "build:linux": "node scripts/check-platform.js linux && npm run build:check && cross-env NODE_ENV=production electron-builder --linux",
    "build:linux:clean": "node scripts/clear-electron-cache.js && npm run build:linux",
    "lint": "eslint .",
    "version:patch": "npm version patch -m \"chore: поднятие фикса версии до версии %s\"",
    "version:minor": "npm version minor -m \"chore: поднятие минорной версии до версии %s\"",
    "version:major": "npm version major -m \"chore: поднятие мажорной версии до версии %s\"",
    "version:patch:local": "node scripts/version-update.js patch",
    "version:minor:local": "node scripts/version-update.js minor",
    "version:major:local": "node scripts/version-update.js major"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "mobx": "^6.15.0",
    "mobx-react": "^9.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.0.0",
    "react-router-dom": "^7.9.3",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "sass": "^1.77.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.projectvoice.electron",
    "productName": "ProjectVoice",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server.js",
      "package.json"
    ],
    "asar": false,
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
